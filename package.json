{
  "name": "nextplate",
  "description": "An opinionated Next.js template for your next plate üçΩÔ∏è",
  "version": "2.0.0-rc2",
  "repository": "https://github.com/grikomsn/nextplate.git",
  "author": "Griko Nibras <git@griko.id>",
  "scripts": {
    "now-build": "run-s \"build:**\"",
    "build": "env-cmd run-s \"build:**\"",
    "build:scripts": "node scripts/build.js",
    "build:web": "next build && next-sitemap",
    "clean": "rimraf \".next\" \"public/!(.gitkeep)\"",
    "develop": "next dev",
    "format": "run-p \"format:**\"",
    "format:index": "prettier --write \"*.{js,json,md}\"",
    "format:src": "prettier --write \"src/**/*.{css,js,ts,tsx}\"",
    "lint": "eslint --cache --fix \"src/**/*.{js,jsx,ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "validate": "run-s lint type-check"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.1.4",
    "@chakra-ui/theme-tools": "^1.0.3",
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "chrome-aws-lambda": "^5.5.0",
    "favicons": "^6.2.0",
    "framer-motion": "^3.2.1",
    "next": "^10.0.5",
    "next-seo": "^4.17.0",
    "nprogress": "^0.2.0",
    "prism-react-renderer": "^1.1.1",
    "puppeteer": "^5.5.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.1.0",
    "react-markdown": "^5.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@types/node": "^14.14.21",
    "@types/nprogress": "^0.2.0",
    "@types/puppeteer": "^5.4.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "copy": "^0.3.2",
    "env-cmd": "^10.1.0",
    "eslint": "^7.17.0",
    "eslint-config-kentcdodds": "^17.3.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^4.3.8",
    "import-sort-parser-typescript": "^6.0.0",
    "lint-staged": "^10.5.3",
    "next-sitemap": "^1.4.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3"
  },
  "browserslist": [
    "since 2017"
  ],
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "parser": "typescript",
      "style": "eslint",
      "options": {}
    }
  },
  "license": "MIT"
}
